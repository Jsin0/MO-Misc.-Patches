<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Race to the Rim</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "RttR_Hotburple"]/comps/li[@Class="RttRAnimalBehaviours.CompProperties_EatWeirdFood"]/customThingToEat</xpath>
					<value>
						<li>DankPyon_ComponentBasic</li>
						<li>DankPyon_IronOre</li>
						<li>DankPyon_IronIngot</li>
						<li>DankPyon_SilverOre</li>
						<li>DankPyon_GoldOre</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "RttR_Hotburple"]/comps/li[@Class="RttRAnimalBehaviours.CompProperties_EatWeirdFood"]/thingToDigIfMapEmptyRandom</xpath>
					<value>
						<li>DankPyon_IronOre</li>
						<li>DankPyon_SilverOre</li>
						<li>DankPyon_GoldOre</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "RttR_Hotburple"]/comps/li[@Class="AnimalBehaviours.CompProperties_DigPeriodically"]/customThingToDig</xpath>
					<value>
						<li>DankPyon_IronOre</li>
						<li>DankPyon_SilverOre</li>
						<li>DankPyon_GoldOre</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "RttR_Hotburple"]/comps/li[@Class="AnimalBehaviours.CompProperties_DigPeriodically"]/customAmountToDig</xpath>
					<value>
						<li>10</li>
						<li>10</li>
						<li>10</li>
						<li>10</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "RttR_Hotburple" or defName = "RttR_Gronckle"]/comps/li[@Class="AnimalBehaviours.CompProperties_AnimalProduct"]/additionalItems</xpath>
					<value>
						<additionalItems>
							<li>DankPyon_Citrine</li>
							<li>DankPyon_Onyx</li>
							<li>DankPyon_Emerald</li>
							<li>DankPyon_Sapphire</li>
							<li>DankPyon_Ruby</li>
						</additionalItems>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
  
</Patch>