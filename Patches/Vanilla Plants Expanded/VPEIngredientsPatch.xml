<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Vanilla Plants Expanded</li>
    </mods>
		<match Class="PatchOperationSequence">
		  <operations>
		<!-- Replacing Cabbages -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li="DankPyon_RawCabbages"]/li</xpath>
				<value>
					<li>VCE_RawCabbage</li>
				</value>
			</li>
		<!-- Replacing Pumpkins-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li="DankPyon_RawPumpkins"]/li</xpath>
				<value>
					<li>VCE_RawPumpkin</li>
				</value>
			</li>
		<!-- Replacing Onions-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li="DankPyon_RawOnions"]/li</xpath>
				<value>
					<li>VCE_RawOnion</li>
				</value>
			</li>
		<!-- Replacing Tomatoes-->
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li="DankPyon_RawTomatoes"]/li</xpath>
				<value>
					<li>VCE_RawTomatoes</li>
				</value>
			</li>
		<!-- Replacing Apples -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef/ingredients/li/filter/thingDefs[li="DankPyon_RawApples"]/li</xpath>
				<value>
					<li>VCE_RawApple</li>
				</value>
			</li>
			<!-- etc -->
			</operations>	
		</match>	
	</Operation>
</Patch>
 
   